{
  "manifest_version": 2,

  "name": "AwesomeMarquee",
  "description": "Adds the essential component that all modern webpages are missing",
  "version": "1.0",

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_title": "Marquee me!",
    "default_icon": "icon.png"
  },

  "permissions": [
    "activeTab"
  ]
}
